{
    "openapi":"3.0.0",
    "info":{
        "title": "api para controlar meus filmes",
        "description": "vou usar essa api para controlar meus filmes assistidos",
        "contact": {
            "email": "mateusseabra@hotmail.com"
        },
        "version":"1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/v1",
            "description":"api de filmes"
        }
    ],
    "paths":{
        "/categorias": {
        "post": {
            "summary": "Cadastro de categorias",
            "description": "essa rota cadastra novas categorias",
            "tagas": ["categorias"],
            "requestBody":{
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/categorias"
                        },
                        "examples" :{
                            "filmes" : {
                                "value": {
                                    "name": "o nome do filme",
                                    "id": "1",
                                    "ano": "1888"
                                }
                            }
                        }
                    }
                }
            },
            "responses" : {
                "200":{
                    "description" :  "OK"
                },
                "201":{
                    "description" : "Create"
                },
                "202":{
                    "description" : "Accepted"
                },
                "401": {
                    "description" : "Unauthorized"
                },
                "400" : {
                    "description" : "Não foi possivel adicionar!"
                },
                "404":{
                    "description" : "Não foi nao achei a categoria!"
                }
            }
        }
    }
    },
    "components" :{
        "schemas" : {
            "categorias": {
                "type": "object",
                "properties" : {
                    "nome" : {
                        "type": "string"
                    },
                    "ano": {
                        "type": "number"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}